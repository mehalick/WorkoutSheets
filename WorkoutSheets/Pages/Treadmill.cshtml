@page
@{
	ViewData["Title"] = "Treadmill";
}

<partial name="_LayoutPortrait" />

<h1>Treadmill</h1>

<table id="table" class="table table-bordered">
	<colgroup>
		<col style="width: 25%;"/>
		<col style="width: 25%;"/>
		<col style="width: 25%;"/>
		<col style="width: 25%;"/>
	</colgroup>
	<thead>
	<tr>
		<th>Date</th>
		<th>Duration (min)</th>
		<th>Speed (km/h)</th>
		<th>Incline (%)</th>
	</tr>
	</thead>
	<tbody>
	@for (var i = 0; i < 26; i++)
	{
		var c = "";

		if (i % 2 == 0)
		{
			c = "highlight";
		}

		<tr>
			<td class="@c">&nbsp;</td>
			<td class="@c">&nbsp;</td>
			<td class="@c">&nbsp;</td>
			<td class="@c">&nbsp;</td>
		</tr>
	}
	</tbody>
</table>
