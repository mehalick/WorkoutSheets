@model Stage

<h1>@Model.Title</h1>
<table id="table" class="table table-bordered">
    <thead>
        <tr>
            <th colspan="2">Exercise</th>
            @foreach (var i in Model.SetsPerDay)
            {
                <th colspan="@i"></th>
            }
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Exercises.Count(); i++)
        {
            var cssClass = "";

            if (Model.Supersets.Contains(i + 1))
            {
                cssClass = "superset";
            }

            <tr class="@cssClass">
                <th scope="row" class="index">@(i + 1)</th>
                <td class="exercise">@Model.Exercises.ElementAt(i)</td>
                @foreach (var j in Model.SetsPerDay)
                {
                    for (var set = 0; set < j; set++)
                    {
                        <td></td>
                    }
                }
            </tr>
        }
    </tbody>
</table>
